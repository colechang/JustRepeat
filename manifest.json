{
    "name": "Just Repeat",
    "version": "1.0.0",
    "description": "This is an extension to repeat from certain points of a youtube video. So we can skip all the boring stuff of a video",
    "manifest_version": 3,
    "author": "Cole Chang",
    "action": {
        "default_popup": "popup.html",
        "default_title":"Just Repeat"
    },
    "default_locate":"en",
    "permissions":[
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions":["https://*.youtube.com/*"],
    "content_scripts":[
        {
        "matches":["https://*.youtube.com/*"],
        "js":["inject.js"]
        }
    ],
    "background":{
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
          "resources": [
            "assets/loop.png",
            "assets/bookmark.png",
            "assets/loopRed50.png",
            "assets/loopRed100.png"
          ],
          "matches": ["https://*.youtube.com/*"]
        }
      ]
}   